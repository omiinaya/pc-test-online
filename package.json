{
  "name": "mmit-testing-app",
  "version": "1.0.0",
  "description": "Computer repair testing application",
  "main": "electron/main.js",
  "author": "OmarM",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend:electron": "cd frontend && cross-env ELECTRON=true npm run build",
    "build:backend": "cd backend && npm run build",
    "electron:dev": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:frontend:electron && electron-builder",
    "electron:pack": "npm run build:frontend:electron && electron-builder --dir",
    "electron:dist": "npm run build:frontend:electron && electron-builder --publish=never",
    "build:linux": "npm run build && electron-builder --linux dir",
    "build:alpine": "npm run build:linux && bash ./bootable-iso/scripts/prepare-alpine.sh",
    "build:iso": "npm run build:alpine && bash ./bootable-iso/scripts/build-alpine-iso.sh",
    "build:iso:windows": "npm run build:alpine && powershell.exe -ExecutionPolicy Bypass -File ./bootable-iso/scripts/build-iso-windows.ps1 -OutputPath ./bootable-iso/output/mmit-qa-tools-hybrid.iso",
    "test:vm": "bash ./bootable-iso/scripts/test-in-vm.sh",
    "test:qemu": "\"C:\\Program Files\\qemu\\qemu-system-x86_64.exe\" -accel tcg -m 4096 -boot d -cdrom ./bootable-iso/output/mmit-qa-tools-hybrid.iso -display gtk",
    "create:usb": "bash ./bootable-iso/scripts/create-usb.sh",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "lint": "npm run lint:root && npm run lint:frontend && npm run lint:backend",
    "lint:root": "eslint . --ext .js,.cjs,.mjs --ignore-path .gitignore --ignore-pattern \"frontend/docs/**\" --ignore-pattern \"**/docs/**\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:root && npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:root": "eslint . --ext .js,.cjs,.mjs --fix --ignore-path .gitignore --ignore-pattern \"frontend/docs/**\" --ignore-pattern \"**/docs/**\"",
    "lint:fix:frontend": "cd frontend && npm run lint",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "format": "npm run format:root && npm run format:frontend && npm run format:backend",
    "format:root": "prettier --write \"**/*.{js,cjs,mjs,json,md}\" --ignore-path .gitignore",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mmit.testing-app",
    "productName": "MMIT Lab Testing App",
    "copyright": "Copyright Â© 2025 OmarM",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "!frontend/dist/stats.html",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "frontend/dist",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "MMIT Lab needs microphone access to test your microphone functionality",
        "NSCameraUsageDescription": "MMIT Lab needs camera access to test your camera functionality",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "MMIT Lab",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "description": "Hardware testing application for computer repair professionals"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MMIT Lab Testing App"
    },
    "dmg": {
      "title": "MMIT Lab Testing App",
      "icon": "build/icon.icns",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "vite": "^7.0.2"
  }
}
